@model GrapheneTraceWeb.ViewModels.ClinicianDashboardViewModel
@using System.Linq
@inject GrapheneTraceWeb.Data.AppDbContext AppDb

@{
    ViewData["Title"] = "Clinician Dashboard";
}

<div class="container mt-5">
    <h2 class="mb-4 text-center">Clinician Dashboard</h2>

    @* Success message for replies *@
    @if (TempData["ReplySaved"] != null)
    {
        <div class="alert alert-success">
            @TempData["ReplySaved"]
        </div>
    }

    <div class="card p-3 mb-4">
        <h5>Patient List</h5>

        @if (Model.Patients == null || !Model.Patients.Any())
        {
            <p>No patients found.</p>
        }
        else
        {
            <p class="text-muted">Patients found: @Model.Patients.Count</p>

            <table class="table">
                <thead>
                    <tr>
                        <th>Patient</th>
                        <th>Email</th>
                        <th>Last Measurement</th>
                        <th>Peak Pressure (mmHg)</th>
                        <th>Contact Area (%)</th>
                        <th>Alert</th>
                        <th>Action</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var p in Model.Patients)
                    {
                        var rowClass = p.AlertLevel == "Critical"
                        ? "table-danger"
                        : p.AlertLevel == "High pressure"
                        ? "table-warning"
                        : string.Empty;

                        <tr class="@rowClass">
                            <td>@p.Name</td>
                            <td>@p.Email</td>
                            <td>
                                @if (p.LastMeasurementTime.HasValue)
                                {
                                    @p.LastMeasurementTime.Value.ToLocalTime().ToString("g")
                                }
                                else
                                {
                                    @:No data
                                }
                            </td>
                            <td>@(p.LastPeakPressure?.ToString() ?? "-")</td>
                            <td>@(p.LastContactArea?.ToString() ?? "-")</td>
                            <td>@p.AlertLevel</td>
                            <td>
                                <a asp-controller="User"
                                   asp-action="Dashboard"
                                   asp-route-id="@p.UserId"
                                   class="btn btn-primary btn-sm">
                                    View Dashboard
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        }
    </div>

    <div class="card p-3 mb-4">
        <h5>Recent Alerts</h5>

        @{
            var alerts = Model.Patients
            .Where(p => p.AlertLevel == "High pressure" || p.AlertLevel == "Critical")
            .ToList();
        }

        @if (!alerts.Any())
        {
            <p>No critical alerts at the moment.</p>
        }
        else
        {
            <ul>
                @foreach (var a in alerts)
                {
                    <li>
                        <strong>@a.AlertLevel</strong> for @a.Name
                        @if (a.LastMeasurementTime.HasValue)
                        {
                            @: (last measurement @a.LastMeasurementTime.Value.ToLocalTime().ToString("g"))
                        }
                    </li>
                }
            </ul>
        }
    </div>

    <div class="card p-3 mb-4">
        <h5>Recent Patient Comments</h5>

        @{
            // Top-level comments written by patients (no ParentCommentId, no ClinicianId)
            var comments = AppDb.Comments
            .Where(c => c.ParentCommentId == null && c.ClinicianId == null)
            .OrderByDescending(c => c.Timestamp)
            .Take(10)
            .ToList();
        }

        @if (!comments.Any())
        {
            <p class="text-muted">No patient comments available.</p>
        }
        else
        {
            <table class="table mt-2">
                <thead>
                    <tr>
                        <th>Patient</th>
                        <th>Comment time</th>
                        <th>Measurement time</th>
                        <th>Comment</th>
                        <th>Clinician reply</th>
                        <th>Action</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var c in comments)
                    {
                        var patient = AppDb.Users.FirstOrDefault(u => u.Id == c.UserId);
                        var measurementTime = AppDb.PressureData
                        .Where(p => p.Id == c.PressureDataId)
                        .Select(p => p.Timestamp)
                        .FirstOrDefault();

                        // Find reply (if any)
                        var reply = AppDb.Comments
                        .FirstOrDefault(r => r.ParentCommentId == c.Id && r.ClinicianId != null);

                        <tr>
                            <td>@(patient?.Name ?? "Unknown")</td>
                            <td>@c.Timestamp.ToLocalTime().ToString("g")</td>
                            <td>
                                @if (measurementTime != default(DateTime))
                                {
                                    @measurementTime.ToLocalTime().ToString("g")
                                }
                                else
                                {
                                    @:N/A
                                }
                            </td>
                            <td>@c.Text</td>
                            <td>
                                @if (reply != null)
                                {
                                    @reply.Text
                                }
                                else
                                {
                                    <span class="text-muted">No reply yet</span>
                                }
                            </td>
                            <td>
                                @if (reply == null)
                                {
                                    <a asp-controller="Clinician"
                                       asp-action="ReplyComment"
                                       asp-route-id="@c.Id"
                                       class="btn btn-sm btn-outline-primary">
                                        Reply
                                    </a>
                                }
                                else
                                {
                                    <span class="text-muted">Replied</span>
                                }
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        }
    </div>
</div>
