<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"] - GrapheneTrace</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="~/GrapheneTraceWeb.styles.css" />
</head>
<body class="d-flex flex-column min-vh-100">
    <header>
        <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
            <div class="container-fluid">
                <a class="navbar-brand" asp-controller="Home" asp-action="Index">
                    GrapheneTrace
                </a>

                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#mainNavbar"
                        aria-controls="mainNavbar" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse" id="mainNavbar">
                    <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                        @* General navigation *@
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Home" asp-action="Index">Home</a>
                        </li>

                        @* Quick access to dashboards (for demo / academic purposes) *@
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="User" asp-action="Dashboard">User Dashboard</a>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Clinician" asp-action="Dashboard">Clinician Dashboard</a>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Admin" asp-action="Dashboard">Admin Panel</a>
                        </li>
                    </ul>

                    <ul class="navbar-nav ms-auto">
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Home" asp-action="Login">Login</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <div class="container flex-grow-1">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <!-- Footer is now normal (not fixed) so it will not overlap the chart -->
    <footer class="border-top text-muted mt-4">
        <div class="container py-3 d-flex flex-column flex-md-row justify-content-between align-items-center">
            <span>&copy; @DateTime.Now.Year - GrapheneTrace</span>
            <span class="small">Prototype for academic assessment</span>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
