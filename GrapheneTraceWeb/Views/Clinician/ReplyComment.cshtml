@model GrapheneTraceWeb.Models.Comment

@{
    ViewData["Title"] = "Reply to Comment";
    var parent = ViewBag.ParentComment as GrapheneTraceWeb.Models.Comment;
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card p-4 shadow-sm">

                <h3 class="mb-3">Reply to Patient Comment</h3>

                @* Display the original comment *@
                @if (parent != null)
                {
                    <div class="mb-3 p-3 bg-light border rounded">
                        <h6><strong>Original Patient Comment</strong></h6>
                        <p class="mb-1">
                            <strong>Date:</strong> @parent.Timestamp.ToLocalTime().ToString("g")
                        </p>
                        <p class="mb-0">@parent.Text</p>
                    </div>
                }

                <form asp-action="ReplyComment" method="post">
                    @Html.AntiForgeryToken()

                    @* Hidden fields needed to link the reply *@
                    <input type="hidden" asp-for="ParentCommentId" />
                    <input type="hidden" asp-for="PressureDataId" />
                    <input type="hidden" asp-for="UserId" />
                    <input type="hidden" asp-for="ClinicianId" />

                    <div asp-validation-summary="All" class="text-danger mb-2"></div>

                    <div class="mb-3">
                        <label asp-for="Text" class="form-label">Reply Message</label>
                        <textarea asp-for="Text" class="form-control" rows="4"></textarea>
                        <span asp-validation-for="Text" class="text-danger"></span>
                    </div>

                    <button type="submit" class="btn btn-primary">Save Reply</button>
                    <a asp-action="Dashboard" class="btn btn-outline-secondary ms-2">Cancel</a>

                </form>

            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
