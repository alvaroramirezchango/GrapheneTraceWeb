@model GrapheneTraceWeb.Models.Comment

@{
    ViewData["Title"] = "Add Comment";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card p-4">
                <h3 class="mb-3">Add Comment</h3>

                <p class="text-muted small mb-4">
                    Add a comment related to this pressure measurement (e.g. discomfort, posture, activity, etc.).
                </p>

                <form asp-action="AddComment" method="post">
                    @* Anti-forgery token for security *@
                    @Html.AntiForgeryToken()

                    @* Hidden field to keep the link with the measurement *@
                    <input type="hidden" asp-for="PressureDataId" />

                    <div asp-validation-summary="All" class="text-danger mb-2"></div>

                    <div class="mb-3">
                        <label asp-for="Text" class="form-label"></label>
                        <textarea asp-for="Text" class="form-control" rows="4"></textarea>
                        <span asp-validation-for="Text" class="text-danger"></span>
                    </div>

                    <button type="submit" class="btn btn-primary">Save comment</button>
                    <a asp-action="Dashboard" class="btn btn-outline-secondary ms-2">Cancel</a>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
