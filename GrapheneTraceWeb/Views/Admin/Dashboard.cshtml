@model List<GrapheneTraceWeb.Models.User>

@{
    ViewData["Title"] = "Admin Dashboard";
}

<h2 class="text-center mb-4">Admin Dashboard</h2>

<div class="container">
    <table class="table table-bordered table-striped">
        <thead>
            <tr>
                <th>Name</th>
                <th>Email</th>
                <th>Role</th>
                <th style="width: 180px;">Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var user in Model)
            {
                <tr>
                    <td>@user.Name</td>
                    <td>@user.Email</td>
                    <td>@user.Role</td>
                    <td>
                        <a class="btn btn-primary btn-sm" href="/Clinician/Dashboard?id=@user.Id">View Data</a>
                        <a class="btn btn-danger btn-sm" href="/Admin/Delete/@user.Id">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
