@model List<GrapheneTraceWeb.Models.User>

@{
    ViewData["Title"] = "Admin - User Management";
}

<div class="container mt-5">
    <h2 class="mb-4 text-center">Admin - User Management</h2>

    @if (Model == null || !Model.Any())
    {
        <p>No users found.</p>
    }
    else
    {
        <p class="text-muted">Total users: @Model.Count</p>

        <table class="table table-striped">
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Email</th>
                    <th>Role</th>
                    <th>Password</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var u in Model)
                {
                    <tr>
                        <td>@u.Name</td>
                        <td>@u.Email</td>
                        <td>@u.Role</td>
                        <td>@u.Password</td>
                        <td>
                            <a asp-controller="Admin"
                               asp-action="Edit"
                               asp-route-id="@u.Id"
                               class="btn btn-sm btn-primary">
                                Edit
                            </a>

                            <form asp-controller="Admin"
                                  asp-action="Delete"
                                  asp-route-id="@u.Id"
                                  method="post"
                                  style="display:inline-block;"
                                  onsubmit="return confirm('Are you sure you want to delete this user?');">
                                <button type="submit" class="btn btn-sm btn-danger">
                                    Delete
                                </button>
                            </form>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
</div>
